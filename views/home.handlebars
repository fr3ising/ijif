<div class="container">
  {{#if nick}}
  <br/>
  <input id="q" style="width:240px;" name="q" class="form-control" placeholder="Términos de búsqueda" required></input>
  <br/>
  <button style="width:240px;" class="btn btn-lg btn-primary btn-block" 
	  onclick="searchScript($('#q').val());" type="submit">
    <span class="glyphicon glyphicon-search" style="margin-right:30px"></span>Buscar en infojobs</button>

  <div id="offers">
  </div>


  <br/>
  <a href="/chat" style="width:240px;text-align:left" class="btn btn-success btn-lg">
    <span class="glyphicon glyphicon-fire" style="margin-right:30px"></span> Chat
  </a>
  <br/>

  <!-- <a href="/sendLink" style="width:240px;text-align:left" class="btn btn-primary btn-lg"> -->
  <!--   <span class="glyphicon glyphicon-send" style="margin-right:30px"></span> Enviar link -->
  <!-- </a> -->
  {{else}}
  <br/>
  <a href="/signin" style="width:240px;text-align:left" class="btn btn-primary btn-lg">
    <span class="glyphicon glyphicon-eye-open" style="margin-right:30px"></span> Identificarse
  </a>
  <br/>
  <br/>
  <a href="/signup" style="width:240px;text-align:left" class="btn btn-success btn-lg">
    <span class="glyphicon glyphicon-hand-up" style="margin-right:30px"></span> Registrarse
  </a>
  {{/if}}
  {{#each links}}
  <h1><a href="/link/{{this.id}}">{{this.title}}</a></h1>
  <p style="text-align:right;color:olive"><i>Enviado por {{this.nick}} - {{this.idate}}</i></p>
  <p>{{this.comment}}</p>
  {{/each}}

  {{content}}
  {{#if nick}}
  <br/>
  <a href="/signout" style="width:240px;text-align:left" class="btn btn-danger btn-lg">
    <span class="glyphicon glyphicon-log-out" style="margin-right:30px"></span> Bye {{nick}}
  </a>
  <br/>
  <br/>
  <a href="/changePassword" style="width:240px;text-align:left" class="btn btn-warning btn-lg">
    <span class="glyphicon glyphicon-user" style="margin-right:30px"></span>  Cambiar password
  </a>
  <br/>
  {{/if}}
</div>
<script src="/searchScripts.js"></script>


