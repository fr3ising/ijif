<script>
function showLog(pop_id) {
    var popup = document.getElementById(pop_id);
    popup.classList.toggle("show");
}
</script>

{{#if offers}}
{{#each offers}}
{{#if this.title}}
<form id="{{this.id}}" action="/storeOffer" method="post">
  <input type="hidden" name="ijid" value="{{this.id}}" />
  {{#if ../../nick}}
  <a name="#{{this.id}}"></a>
  <h1><a href="#{{this.id}}" onclick="document.getElementById('{{this.id}}').submit();">{{this.title}}</a></h1>
  {{else}}
  <h1><div class="popup" onclick="showLog('pop_#{{this.id}}')">{{this.title}}
      <span class="popuptext" id="pop_#{{this.id}}"><a style="color: #AAFFAA" href="/signin">Identifícate</a>
	o <a  style="color: #AAFFAA" href="/signup">regístrate</a>
	para ver
	los detalles de la oferta: <strong>{{this.title}}</strong></span></div></h1>
  {{/if}}
</form>
